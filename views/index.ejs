<%- include('./partials/head') %>
  <div class="wrapper">

    <header>
      <p>leerjaar 1 - 2023/24</p>
      <h1>FDND</h1>
      <h1>Frontend Design & Development</h1>
    </header>

    <main>

      <!-- <button class="filter-btn"><i class='bx bx-filter'></i> FILTERS</button>
      <div class="filter-view">
        <h4>FILTERS</h4>
      </div> -->

      <div class="container">
        <!-- loop waardoor dit li element voor elk persoon word herhaald -->
        <% persons.forEach(person=> { %>
          <article class="profilecard">
            <a href="./person/<%= person.id %>">
              <h2>
                <%=person.name %>
              </h2>
            </a>

            <p class="surname">
              <%=person.prefix %>
                <%=person.surname %>
            </p>
            <img src="<%= (person.avatar == '') ? 'assets/placeholder.jpg' : person.avatar %>"
              onerror="this.src='assets/replace.jpeg'" alt="avatar">
            <p class="nickname">
              <%=person.nickname %>
            </p>
          </article>
          <% }) %>

      </div>

      <div class="back-to-top">
        <button class="scroll-btn" onclick="topFunction()">BACK TO TOP</button>
      </div>

  </div>

  <div class="messageboard">

    <!-- <button class="show-msgs"><i class='bx bxs-comment-add'></i></button>  -->


    <form class="msg-form" method="post" action="/">
      <h4>leave a comment!</h4>
      <label for="name">name:
        <input required type="text" id="name" name="name">
      </label>
      <label for="message">
        message:
        <textarea required name="message"></textarea>
      </label>
      <button type="submit">send</button>
    </form>

    <div class="message-container">
      <h2>comments</h2>
     <div class="message-post">
        <% for(let count=0; count < messages.length; count++){ %>
          <section class="message">
            <h3>
              <%= names[count] %>:
            </h3>
            <p>
              <%= messages[count] %>
            </p>
  
          </section>
          <% } %>
     </div>
    </div>
  </div>

  </main>
  <%- include('./partials/foot') %>